@model IEnumerable<ITLab29.Models.Domain.User>
@{
    ViewData["Title"] = "Aanwezigen";
}

<h1>Ingeschreven gebruikers</h1>

<table class="table table-striped table-sm table-bordered">
    <tr>
        <th>Avatar</th>
        <th>Naam</th>
        <th>ID</th>
        <th>Aanwezig?</th>
    </tr>
    @{
        if (Model != null && Model.Count() != 0)
        {
            foreach (ITLab29.Models.Domain.User m in Model)
            {
                <tr>
                    <td>
                        <img height="100" width="100" src="@m.Avatar.Path">
                    </td>
                    <td>
                        @m.FirstName @m.LastName
                    </td>
                    <td>
                        @m.Id
                    </td>
                    <td>
                        @*TODO FILL IN ACTION & ID*@
                        <form asp-controller="Session" asp-action="" asp-route-id="">
                            <button type="submit" class="btn btn-success btn-block">
                                Aanwezig!
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>Geen data</td>
                <td>Geen data</td>
            </tr>
        }

    }
</table>

