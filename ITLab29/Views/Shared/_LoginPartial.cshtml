@using Microsoft.AspNetCore.Identity
@using ITLab29.Models.Domain;
@using ITLab29.Extensions;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link" asp-controller="User" asp-action="Index" title="Manage">@StringModifier.FirstLetterToUpper(User.Identity.Name.Split(".").ElementAt(0))</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" id="form_login" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Session", new { area = "" })">
            <a class="nav-link" href="javascript:document.getElementById('form_login').submit();">Uitloggen</a>
        </form>
    </li>
}
else
{
    
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Aanmelden</a>
    </li>
}

