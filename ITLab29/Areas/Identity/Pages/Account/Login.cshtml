@page
@model LoginModel

@{
    ViewData["Title"] = "Aanmelden";
}
    <header class="py-2 bg-image-full" style="background-image: url('/photo/1280px-HoGent_campusSchoonmeersen.jpg');margin-bottom:15px">
        <a href="/">
            <img class="img-fluid d-block mx-auto" src="~/photo/itlab_logo.png" alt="">
        </a>
    </header>
<div class="row justify-content-center">
    <div class="col-md-4 justify-content-center">
        <h1 style="margin-top: 1em;">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h4>Gebruik een HoGent account om aan te melden.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Wachtwoord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Onthoud mij?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
